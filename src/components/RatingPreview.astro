---
export interface Props {
    dog: string;
    brand?: string;
    rating: number;
    excerpt?: string;
    url: string;
}

const { dog, brand, rating, excerpt, url } = Astro.props as Props;
---

<li
    class="border-dashed border-4 border-stone-300 rounded-lg flex items-start lg:items-center justify-between mx-2 relative hover:bg-orange-400 hover:border-accent-red transition-all duration-500"
>
    <div class="p-6">
        <h4 class="text-4xl font-bold">{dog}</h4>
        {
            brand && (
                <p class="">
                    by <span class="text-red-600 font-bold">{brand}</span>
                </p>
            )
        }
        {excerpt && <p class="italic">"{excerpt}"</p>}
    </div>

    <div
        class="flex justify-center items-center p-8 h-20 w-20 lg:w-32 lg:h-32 drop-shadow-lg font-bold text-light bg-red-600 rounded-full rotate-12 lg:-mr-8"
    >
        <p class="text-4xl lg:text-6xl leading-none">{rating}</p>
    </div>
    <a class="absolute inset-0" href={url}
        ><span class="sr-only">Read the full {dog} review</span>
    </a>
</li>
