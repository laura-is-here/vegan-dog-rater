---
export interface Props {
    dog: string;
    rating: number;
}

const { dog, rating } = Astro.props as Props
---

<li
    class="border-dashed border-4 border-stone-300 rounded-lg flex items-center justify-between mx-2 relative hover:bg-orange-200 hover:border-orange-500 transition-all duration-500">
    <div class="flex items-center">
        <div class="drop-shadow-lg bg-cyan-200 rounded-full -rotate-12 p-2 -mt-8 lg:-ml-8 mr-2">
            <img class=" object-fill" width="100px" src="/images/lightlife.png" />
        </div>

    </div>
    <div>
        <h4 class="text-4xl font-bold text-center">{dog}</h4>
        <p class="italic">"Go-to for a protein-packed snack"</p>
    </div>


    <div class="p-8 drop-shadow-lg font-bold bg-cyan-200 rounded-full rotate-12 scale-110 lg:-mr-8">
        <span class="text-4xl leading-none">{rating}</span><br />
        <span class="text-sm leading-none">out of 100</span>
    </div>
    <a class="absolute inset-0" href="#"><span class="sr-only">Read the full {dog} review</span></a>
</li>